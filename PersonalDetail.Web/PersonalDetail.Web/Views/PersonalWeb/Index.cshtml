
@model PersonalDetail
@{
    ViewData["Title"] = "Personal Detail Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="forSubmit">
    @Html.ValidationSummary()<br />

    @using (Html.BeginForm("Index", "PersonalWeb", FormMethod.Post))
    {
        <div class="row">
            <div class="col-lg-2">First Name</div>
            <div class="col-lg-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-2">Last Name</div>
            <div class="col-lg-10">
                @Html.TextBoxFor(a => a.LastName, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <br />
        <div class="row">
            <div class="col-lg-12"><input type="submit" value="Submit" class="btn btn-primary"></div>

        </div>
    }
</div>
